generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  notes     Note[]
  createdAt DateTime @default(now())
}

model Note {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  title      String?
  content    String
  summary    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
